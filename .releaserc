{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "major",
            "release": "major"
          },
          {
            "type": "minor",
            "release": "minor"
          },
          {
            "type": "patch",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "ğŸ‰ Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "ğŸ› Bug Fixes",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "ğŸ“– Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": "âœ’ï¸ Style Changes",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "ğŸ”ƒ Refactor",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "ğŸ“ˆ Performance Improvements",
              "hidden": false
            },
            {
              "type": "test",
              "section": "ğŸ”§ Tests",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "ğŸ–¥ï¸ CI/CD",
              "hidden": false
            },
            {
              "type": "chore",
              "hidden": true
            }
          ]
        }
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "extension.zip",
            "label": "Chrome Extension",
            "name": "steamchecker.zip"
          }
        ]
      }
    ]
  ]
}
